{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    // Serve common static asset types directly so they keep correct MIME types
    { "src": "^/(.*\\.(js|css|png|jpg|jpeg|svg|ico|map|json))$", "dest": "/$1" },
    // SPA fallback for all other routes
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
